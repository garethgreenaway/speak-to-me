    $(document).ready(function() {
      $('#addPresentationModal').modal({
              backdrop: true,
              keyboard: true,
              show: false,
              remote: "/add/presentation/modal/"
          }).css({
             'width': function () {
                 if ($(document).width() >= 1024) {
                  console.log($(document).width());
                  return ($(document).width() * .55) + 'px';
                 } else {
                  console.log($(document).width());
                  return ($(document).width() * .9) + 'px';
                 }
             },
             'margin-left': function () { 
                 return -($(this).width() / 2); 
             }
      });    
